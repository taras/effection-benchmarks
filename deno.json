{
  "nodeModulesDir": "auto",
  "deploy": {
    "install": "deno install",
    "build": "deno task build",
    "runtime": {
      "type": "dynamic",
      "entrypoint": "main.tsx"
    }
  },
  "tasks": {
    "generate": "deno run -A scripts/generate-fixtures.js",
    "parquet": "duckdb < scripts/json-to-parquet.sql",
    "data": "deno task generate && deno task parquet",
    "build": "deno run -A npm:@observablehq/framework@1.13.3/dist/bin/observable.js build",
    "preview": "deno run -A npm:@observablehq/framework@1.13.3/dist/bin/observable.js preview",
    "clean": "rm -rf src/.observablehq/cache",
    "dev": "deno run -A main.tsx",
    "start": "deno run -A main.tsx",
    "check": "deno check main.tsx plugins/**/*.ts context/**/*.ts routes/**/*.ts cli/**/*.ts",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "bench": "deno run -A cli/main.ts",
    "bench:check": "deno check cli/**/*.ts"
  },
  "compilerOptions": {
    "lib": ["deno.ns", "dom.iterable", "dom"],
    "jsx": "react-jsx",
    "jsxImportSource": "revolution"
  },
  "imports": {
    "effection": "jsr:@effection/effection@^4.0.0",
    "@effectionx/process": "npm:@effectionx/process@^0.7.2",
    "@effectionx/task-buffer": "npm:@effectionx/task-buffer@^1.3.1",
    "configliere": "jsr:@frontside/configliere@^0.1.0",
    "zod": "npm:zod@^3.24.0",
    "@std/fs": "jsr:@std/fs@^1.0.0",
    "rxjs": "npm:rxjs@^7.8.1",
    "effect": "npm:effect@^3.14.0",
    "co": "npm:co@^4.6.0",
    "revolution": "https://deno.land/x/revolution@0.8.0/mod.ts",
    "revolution/jsx-runtime": "https://deno.land/x/revolution@0.8.0/jsx-runtime.ts",
    "@libs/xml": "jsr:@libs/xml@^7.0.3",
    "@std/encoding": "jsr:@std/encoding@^1.0.10",
    "@std/path": "jsr:@std/path@1",
    "@std/http": "jsr:@std/http@1",
    "path-to-regexp": "npm:path-to-regexp@8.2.0",
    "esbuild": "npm:esbuild@0.24.2",
    "esbuild-deno-loader": "jsr:@luca/esbuild-deno-loader@0.11.1",
    "deno-dom": "jsr:@b-fuze/deno-dom@0.1.48",
    "deno-dom/wasm": "https://deno.land/x/deno_dom@v0.1.41/deno-dom-wasm.ts",
    "deno-dom/constructor-lock": "https://deno.land/x/deno_dom@v0.1.41/src/constructor-lock.ts",
    "hast": "npm:@types/hast@^3.0.0",
    "hast-util-to-html": "npm:hast-util-to-html@9.0.0",
    "hastx": "npm:hastx@0.0.11",
    "@observablehq/framework": "npm:@observablehq/framework@1.13.3",
    "@observablehq/plot": "npm:@observablehq/plot@0.6.17",
    "@observablehq/inputs": "npm:@observablehq/inputs@0.12.0",
    "@duckdb/duckdb-wasm": "npm:@duckdb/duckdb-wasm@1.33.1-dev18.0",
    "@duckdb/node-api": "npm:@duckdb/node-api",
    "folder-hash": "npm:folder-hash@4.1.1",
    "apache-arrow": "npm:apache-arrow@21.1.0"
  },
  "fmt": {
    "exclude": ["dist", "node_modules", "data"]
  },
  "lint": {
    "exclude": ["dist", "node_modules", "data"],
    "rules": {
      "exclude": ["prefer-const", "require-yield"]
    }
  }
}
